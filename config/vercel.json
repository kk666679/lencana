{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "framework": "vite",
  "env": {
    "NEXT_PUBLIC_STACK_PROJECT_ID": "@stack_project_id",
    "NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY": "@stack_publishable_key",
    "STACK_SECRET_SERVER_KEY": "@stack_secret_key",
    "DATABASE_URL": "@database_url"
  },
  "functions": {
    "backend/server.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/$1"
    }
  ]
}