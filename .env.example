# Lencana Malaysia Environment Configuration
# Copy this file to .env.local for development

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/lencana?sslmode=require"

# Backend Configuration
PORT=3001
NODE_ENV=development
JWT_SECRET="your-super-secret-jwt-key-here-min-32-chars"
CSRF_SECRET="your-csrf-secret-key-here-min-32-chars"
SESSION_SECRET="your-session-secret-key-here-min-32-chars"

# Frontend Configuration
VITE_API_URL="http://localhost:3001/api"
VITE_FRONTEND_URL="http://localhost:5173"
VITE_APP_NAME="Lencana Malaysia"
VITE_APP_VERSION="2.0.0"

# Security Configuration
CORS_ORIGIN="http://localhost:5173"
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Vercel Blob Storage (for file uploads)
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token-here"

# Neon Database (if using Neon)
NEON_DATABASE_URL="postgresql://neon-user:password@ep-example-neon-host.neon.tech/neondb?sslmode=require"

# Analytics & Monitoring (optional)
VITE_ANALYTICS_ID="your-analytics-id"
SENTRY_DSN="your-sentry-dsn"

# Development Overrides (optional)
# Use these to override defaults for local development
# DATABASE_URL="postgresql://localhost:5432/lencana_dev"
# VITE_API_URL="http://localhost:3001/api"

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=false
